<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.2/font/bootstrap-icons.min.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="~/css/style.css">
    <link rel="stylesheet" href="~/css/animations.css">
    <link rel="stylesheet" href="~/css/Navigation.css">
    <link rel="stylesheet" href="~/css/admin.css">
    <link rel="stylesheet" href="~/css/authentication.css">
    <link rel="stylesheet" href="~/css/cart.css">
    <link rel="stylesheet" href="~/css/product.css">




    <title>@ViewData["Title"] - Baazar</title>
</head>
<body>
    <header>
       <div class="LogoAndSearch">
            <a asp-controller="Home"asp-action="Index"><img class="logo" src="~/css/Images/Untitled design.png"></a>
            <form asp-controller="Product" asp-action="Search">
                <input style="padding: 7px; border-radius: 70px;" name="searchItem" placeholder="Search..."><button style="border:0px; background-color: #24252A;color:white;" type="submit"><i id="search" class="bi bi-search"></i></button>
            </form>
        </div>
<nav>
    <ul class="nav-links-responsive">
        <li><a asp-controller="Home" id="home">Home</a></li>
                <li><a asp-controller="Product" id="allproducts">All Products</a></li>
    
    </ul>
    <ul class="nav-links">
        <li class="individual-link"><a id="home1" asp-controller="Home" asp-action="Index">Home</a></li>
        <li class="individual-link"><a asp-controller="Product" asp-action="Index" >All Products</a></li>
        <li class="individual-link"><a asp-controller="Cart" asp-action="Cart"><i class="bi bi-cart"></i>My Cart</a></li>
        <li class="individual-link" ><a asp-controller="Store" asp-action="ByStore" id="category1" >By Store</a></li>
                <partial name="_LoginPartial" />
    
    </ul>
    <div class="hamburger">
        <span class="bar"></span>
        <span class="bar"></span>
        <span class="bar"></span>
    </div>
</nav>
<div class="login-buttons-responsive">
    
</div>
<div class="login-buttons">
    
           
           
</div>


    </header>
  
            @RenderBody()
        
    </div>

    <footer class="border-top footer text-muted">
        
    </footer>
    <script>
        const hamburger = document.querySelector(".hamburger");
        const navlinks = document.querySelector(".nav-links");
        hamburger.addEventListener('click', () => {
            hamburger.classList.toggle("active");
            navlinks.classList.toggle("active");
        });
        document.querySelectorAll(".individual-link").forEach(n => {
            n.addEventListener("click", () => {
                hamburger.classList.remove("active");
                navlinks.classList.remove("active");
            });
        });

        </script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/script.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
