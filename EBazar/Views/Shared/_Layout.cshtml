    <link rel="stylesheet" href="~/css/style.css">
    <link rel="stylesheet" href="~/css/animations.css">
    <link rel="stylesheet" href="~/css/Navigation.css">
    <link rel="stylesheet" href="~/css/admin.css">
    <link rel="stylesheet" href="~/css/authentication.css">
    <link rel="stylesheet" href="~/css/cart.css">
    <link rel="stylesheet" href="~/css/product.css">




    <title>@ViewData["Title"] - Baazar</title>
</head>
<body>
    <header>
       <div class="LogoAndSearch">
            <img class="logo" src="~/css/Images/Untitled design.png">
            <input style="padding: 7px; border-radius: 70px;" placeholder="Search..."><i id="search"class="bi bi-search"></i>

        </div>
<nav>
    <ul class="nav-links-responsive">
        <li><a href="#" id="home">Home</a></li>
                <li><a asp-controller="Product" id="allproducts">All Products</a></li>
        <li><a href="#" id="category">By Category</a></li>
