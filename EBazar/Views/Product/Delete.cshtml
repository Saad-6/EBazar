@using EBazar.Data.Enums
@model Product

<form method="post">
    <div class="logincontents">

        <h4>Delete Product</h4>
        <label id="productnamelabel" for="ProductName">Product Name:</label>
        <input  readonly placeholder="Product Name" asp-for="Name" type="text" id="ProductName">
        <label  id="productpiclabel" for="ProductPic">Product Picture Url:</label>
        <input readonly placeholder="Product Image  Url" asp-for="PictureUrl" type="text" id="ProductPic">
        <label id="productdescriptionlabel" for="ProductDescription">Description:</label>
        <input readonly placeholder="Product Description" asp-for="Description" type="text" id="ProductDescription">
        <label id="productpricelabel" for="ProductPrice">Price:</label>
        <input  readonly placeholder="Product Name" type="number" asp-for="Price" id="ProductPrice">
        <label id="productstocklabel" for="ProductStock">Stock:</label>
        <input readonly placeholder="Product Stock" type="number" asp-for="Stock" id="ProductStock">
        <label id="productcategorylabel" for="category">Category</label>
        <select asp-for="Category" class="cate">
           
        </select>
        <button class="submit">Delete</button>

    </div>
</form>
