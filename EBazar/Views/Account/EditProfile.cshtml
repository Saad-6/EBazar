@model AppUser
<style>
    body {
        background: #24252A;
    }

    .form-control:focus {
        box-shadow: none;
        border-color: #BA68C8
    }

    .profile-button {
        color: #24252A;
        background-color: white;
        transition: 0.7s ease-in;
        box-shadow: none;
        border: none;
        padding: 10px;
    }

    .neww {
        height: 5px;
        background-color: white;
    }

    #savprof {
        background-color: #24252A;
        color: white;
        transition: 0.7s ease-in;
    }

    #saveprof:hover {
        background-color: #24252A;
        color: white;
    }

    .profile-button:hover {
        background: #682773
    }

    .profile-button:focus {
        background: #682773;
        box-shadow: none
    }

    .profile-button:active {
        background: #682773;
        box-shadow: none
    }

    .back:hover {
        color: #682773;
        cursor: pointer
    }

    .labels {
        font-size: 11px
    }

    .add-experience:hover {
        background: #BA68C8;
        color: #fff;
        cursor: pointer;
        border: solid 1px #BA68C8
    }

    #con {
        border-top: 2px solid white;
    }
</style>
<div class="neww">
</div>

<div id="con" class="container rounded bg-white mt-5 mb-5">
    <div class="row">
        <div class="col-md-3 border-right">
            <div class="d-flex flex-column align-items-center text-center p-3 py-5"><img class="rounded-circle mt-5" width="150px" src="@Model.ProfilePictureUrl"><span class="font-weight-bold">@Model.AppUserName</span><span class="text-black-50">@Model.UserName</span><span> </span></div>
        </div>
        <div class="col-md-5 border-right">
            <div class="p-3 py-5">


                <form method="post" asp-action="EditProfile">
                <div class="d-flex justify-content-between align-items-center mb-3">
                    <h4 class="text-right"> Edit Profile Settings</h4>
                </div>
                <div class="row mt-2">
                    <div class="col-md-6"><label class="labels"> User Name :</label><input type="text" asp-for="@Model.AppUserName" class="form-control" value="@Model.AppUserName"></div>

                    <div class="col-md-12"><label class="labels">Email ID</label><input type="text" class="form-control" asp-for="@Model.UserName" value="@Model.UserName"></div>
                    <div class="col-md-12"><label class="labels">Profile Picture Url</label><input type="text" class="form-control" asp-for="@Model.ProfilePictureUrl" ></div>
                </div>
                <div class="row mt-3">
                    @if (Model.Address != null)
                    {
                        <div class="address">
                            <h3 class="">Address</h3>

                            <div class="col-md-12"><label class="labels">Province</label><input asp-for="@Model.Address.Province" type="text" value="@Model.Address.Province" class="form-control" placeholder="eg..Punjab "></div>
                            <div class="col-md-12"><label class="labels">City</label><input asp-for="@Model.Address.District" type="text" value="@Model.Address.District" class="form-control" placeholder="City/District"></div>
                            <div class="col-md-12"><label class="labels">Street Address</label><input asp-for="@Model.Address.StreetAddress" value="@Model.Address.StreetAddress" type="text" class="form-control" placeholder="Street No/Apart No"></div>

                        </div>
                    }
                    else
                    {
                        <div class="address">
                            <h3 class="">Address</h3>
                            <span class="text-black-50">Edit your profile to add an address</span>
                            <div class="col-md-12"><label class="labels">Province</label><input type="text" class="form-control" placeholder="eg..Punjab " asp-for="@Model.Address.Province"></div>
                            <div class="col-md-12"><label class="labels">City</label><input type="text" class="form-control" placeholder="City/District" asp-for="@Model.Address.District"></div>
                            <div class="col-md-12"><label class="labels">Street Address</label><input type="text" class="form-control" placeholder="Street No/Apart No" asp-for="@Model.Address.StreetAddress"></div>

                        </div>
                    }


                </div>
                <div class="row mt-3">
                  
                </div>
                <div class="mt-5 text-center"><button  id="saveprof" class="profile-button" type="submit">Update Profile</button></div>

                </form>


            </div>
        </div>
        <div class="col-md-4">
            <div class="p-3 py-5">
            </div>
        </div>
    </div>
</div>
</div>
</div>
